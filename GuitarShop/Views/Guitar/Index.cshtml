@model IEnumerable<Guitar>


<div style="background-color:darkgoldenrod">
    <div class="container" style="padding-top:100px; padding-bottom:140px;">
        <h1 class="text-center" style="padding-bottom:60px; color:black; font-size:45px;">Our guitars</h1>

        <div class="row">
            @foreach (var guitar in Model)
            {
                <div class="col-sm-6 col-md-6 col-lg-6">
                    <div class="thumbnail" style="border-color:black; border-radius:7px; box-shadow: 5px 10px 8px black;">
                        <a asp-action="Details" asp-controller="Guitar" asp-route-id="@guitar.Id" data-toggle="tooltip" title="View details of guitar @guitar.Specifications.Model">
                            <img src="@guitar.ImageUrl" alt="guitar" style="width: 75%; height:220px;" class="img-responsive">
                            <div class="caption">
                                <h3><b>€ @guitar.Price</b></h3>
                                <h4>@guitar.Specifications.Model.Description()</h4>
                            </div>
                        </a>
                        <div class="caption">
                            <a asp-action="Details" asp-controller="Guitar" asp-route-id="@guitar.Id" class="btn btn-primary btn-block" style="box-shadow: 3px 2px 2px gray;">
                                <span class="glyphicon glyphicon-eye-open"></span>  View details
                            </a>
                            <a asp-action="AddToWishList" asp-controller="WishList" asp-route-id="@guitar.Id" class="btn btn-warning btn-block" style="box-shadow: 3px 2px 2px gray;">
                                <span class="glyphicon glyphicon-heart-empty"></span> Add to wishlist
                            </a>
                            <a asp-action="AddToShoppingCart" asp-controller="ShoppingCart" asp-route-id="@guitar.Id" class="btn btn-default btn-block" style="box-shadow: 3px 2px 2px gray;">
                                <span class="glyphicon glyphicon-shopping-cart"></span>  Add to shopping cart
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>




