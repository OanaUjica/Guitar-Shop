@model IEnumerable<Guitar>


<div style="background-color:lightgrey">
    <div class="container" style="padding-top:100px; padding-bottom:140px;">
        <h1 class="text-center" style="padding-bottom:60px; color:black; font-size:45px;">Our guitars</h1>

        <div class="row">
            @foreach (var guitar in Model)
            {
                <div class="col-sm-6 col-md-6 col-lg-6">
                    <div class="thumbnail">
                        <a asp-action="Details" asp-controller="Guitar" asp-route-id="@guitar.Id">
                            <img src="@guitar.ImageUrl" alt="guitar" style="width: 75%" class="img-responsive">
                            <div class="caption">
                                <h3 class="pull-right">€ @guitar.Price</h3>
                                <h3>@guitar.Model.Description()</h3>                                
                            </div>
                        </a>
                        <div class="caption">
                            <a asp-action="Details" asp-controller="Guitar" asp-route-id="@guitar.Id" class="btn btn-warning btn pull-right">
                                <span class="glyphicon glyphicon-eye-open"></span>  View details   
                            </a>
                            <a asp-action="WishList" asp-controller="Guitar" class="btn btn-warning btn">
                                <span class="glyphicon glyphicon-heart-empty"></span> Add to wishlist
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>




